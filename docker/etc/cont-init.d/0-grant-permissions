#!/command/with-contenv sh

var_dir=/var/www/stargaze/var/

printf "\nğŸ“‚ Creating cache directories...\n\n"
mkdir -p \
    $var_dir/cache/dev \
    $var_dir/cache/prod \
    $var_dir/log \
printf "\nğŸ“‚ Cache directories ready...\n\n"

printf "\nğŸ“‚ Granting permissions...\n\n"
chown -R www-data:www-data $var_dir
chmod g+s $var_dir
printf "\nğŸ“‚ Permissions granted\n\n"

exit 0
